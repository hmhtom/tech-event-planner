<div class="columns">
  <div class="menu column is-3">
    <p class="menu-label">
      Events
    </p>
    <ul class="menu-list">
      <li><a href="/dashboard?opt=1">My Events</a></li>
      <li><a href="/dashboard?opt=2">Attending</a></li>
      <li><a href="/dashboard?opt=3">Create Event</a></li>
    </ul>
    <p class="menu-label">
      Profile
    </p>
    <ul class="menu-list">
      <li><a href="/dashboard?opt=4">Update Password</a></li>
      <li><a href="/dashboard?opt=5">Delete my account</a></li>
    </ul>
  </div>
  <section class="section column">

    <div class="column is-6">
      <form>
        <h3 class="title">Update Event:</h3>
        <div class="field">
          <label class="label">Event Title:</label>
          <div class="control">
            <input
              class="input"
              type="text"
              id="title"
              value="{{title}}"
            /></div>
        </div>
        <div class="field">
          <label class="label">Date:</label>
          <input class="input" type="datetime-local" id="date" name="date" />
        </div>
        <div class="field">
          <label class="label">Location:</label>
          <input class="input" type="text" id="location" value="{{location}}" />
        </div>
        <div class="field">
          <label class="label">Description:</label>
          <textarea
            class="textarea"
            id="description"
            rows="5"
          >{{description}}</textarea>
        </div>
        <div class="field">
          <label class="label">Categories</label>
          <div class="control">
            <div class="select">
              <select id="category">
                <option value="1">Career</option>
                <option value="2">Learn New Knowledge</option>
                <option value="3">Share Interest</option>
              </select>
            </div>
          </div>
        </div>
        <button
          id="update-event"
          type="button"
          class="button is-link"
        >Submit</button>
      </form>
    </div>
    <script src="/js/update-event.js"></script>
  </section>
</div>