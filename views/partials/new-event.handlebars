<div class="column is-6">
  <form>
    <h3 class="title">Create New Event:</h3>
    <div class="field">
      <label class="label">Event Title:</label>
      <div class="control">
        <input class="input" type="text" id="title" />
      </div>
    </div>
    <div class="field">
      <label class="label">Date:</label>
      <input class="input" type="datetime-local" id="date" name="date" />
    </div>
    <div class="field">
      <label class="label">Location:</label>
      <input class="input" type="text" id="location" />
    </div>
    <div class="field">
      <label class="label">Description:</label>
      <textarea class="textarea" id="description" rows="5"></textarea>
    </div>
    <div class="field">
      <label class="label">Categories</label>
      <div class="control">
        <div class="select">
          <select id="category">
            <option value="1">Career</option>
            <option value="2">Learn New Knowledge</option>
            <option value="3">Share Interest</option>
          </select>
        </div>
      </div>
    </div>
    <button id="new-event" type="button" class="button is-link">Submit</button>
  </form>
</div>
<script src="/js/create-event.js"></script>