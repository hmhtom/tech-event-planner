<div class="column is-6">
  <form>
    <h3 class="title">Update Your Password</h3>
    <div class="field">
      <label class="label">New Password:</label>
      <div class="control">
        <input class="input" type="password" id="password" />
      </div>
    </div>
    <div class="field">
      <label class="label">Confirm Password:</label>
      <div class="control">
        <input class="input" type="password" id="password-confirm" />
      </div>
    </div>
    <button
      id="update-password"
      type="button"
      class="button is-link"
    >Confirm</button>
  </form>
</div>
<script src="/js/update-password.js"></script>